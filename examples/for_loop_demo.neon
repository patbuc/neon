// For Loop Examples in Neon

print("=== Basic For Loop ===")
for (var i = 0; i < 5; i = i + 1) {
    print(i)
}

print("=== Counting Backwards ===")
for (var i = 10; i > 0; i = i - 1) {
    print(i)
}

print("=== Sum of Numbers 1 to 100 ===")
var sum = 0
for (var i = 1; i <= 100; i = i + 1) {
    sum = sum + i
}
print(sum)

print("=== Factorial of 10 ===")
var factorial = 1
for (var i = 1; i <= 10; i = i + 1) {
    factorial = factorial * i
}
print(factorial)

print("=== Nested Loops ===")
for (var i = 1; i <= 5; i = i + 1) {
    for (var j = 1; j <= 5; j = j + 1) {
        print(i * j)
    }
}

print("=== Fibonacci Numbers ===")
var a = 0
var b = 1
print(a)
print(b)
for (var i = 0; i < 8; i = i + 1) {
    var temp = a + b
    print(temp)
    a = b
    b = temp
}
