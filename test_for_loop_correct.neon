// Test basic for loop
for (var i = 0; i < 5; i = i + 1) {
    print(i)
}

print("---")

// Test for loop with condition and update
for (var j = 10; j > 0; j = j - 2) {
    print(j)
}

print("---")

// Test nested for loops
for (var x = 1; x <= 3; x = x + 1) {
    for (var y = 1; y <= 3; y = y + 1) {
        print(x * y)
    }
}

print("---")

// Test for loop with more complex condition
var sum = 0
for (var k = 1; k <= 10; k = k + 1) {
    sum = sum + k
}
print(sum)

print("---")

// Test for loop with break-like behavior (using condition)
for (var m = 0; m < 100; m = m + 1) {
    if (m > 5) {
        print("done")
    }
    if (m <= 5) {
        print(m)
    }
}
