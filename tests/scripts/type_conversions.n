// -100
// 0
// 9876543210
// 50
// === String to Float ===
// 3.14
// -2.5
// 0
// 123
// 12300
// 0.015
// 2.5
// === String to Bool ===
// true
// false
// true
// false
// true
// false
// === Number to String ===
// 42
// -99
// 0
// 3.14159
// -2.718
// 1000000
// === Boolean to String ===
// true
// false
// === Chaining Conversions ===
// 42
// 3.14
// true
// false
// 100
// === Conversions in Expressions ===
// 142
// The answer is 42
// Value: true
// Result: 3.14
// === Conversions in Variables ===
// 50
// 2.5
// true
// Number as string: 123
// Bool as string: false
// === Edge Cases ===
// 9876543210
// 0.001
// true
// 999
// 200
// === Mixed Type Operations ===
// 150
// Combined: 150
// Status: true
// Value is 42.5
// === Whitespace Handling ===
// 42
// 3.14
