// neon.19.n - Forward function references (NEW in multi-pass compiler!)

// Expected:
// 10
// true
// false

// This demonstrates that functions can reference other functions
// that are defined later in the source code

fn first() {
    print second()
}

fn second() {
    return third()
}

fn third() {
    return 10
}

// Call chain: first -> second -> third
first()

// Mutual recursion example
fn even(n) {
    if (n == 0) {
        return true
    }
    return odd(n - 1)
}

fn odd(n) {
    if (n == 0) {
        return false
    }
    return even(n - 1)
}

print even(20)
print odd(30)
